#!/bin/bash
set -e
PID_FILE=<%= node.stun.pid_file %>

function kill_named {
    PID=`ps aux | grep -i stun | awk 'NR==1{print $2}'`
    if [ "$PID" != "" ] ; then
	kill -9 $PID > /dev/null 2>&1
        res=$?
    else
	res=$NOT_FOUND
    fi
    return $res
}

res=1

if [ -f $PID_FILE ] ; then
 PID=`cat $PID_FILE`
 kill $PID > /dev/null 2>&1
 res=$?
fi

if [ $res -ne 0 ] ; then
    kill_named
fi

rm -f ${PID_FILE}

if [ $res -eq 0 ] ; then
 echo "Killed stun"
else
    echo "Could not find stun process to kill"
fi

exit $res